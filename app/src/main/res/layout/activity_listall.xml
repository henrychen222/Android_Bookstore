<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcom to mobile shopping store"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/searchParam"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
            android:onClick="search"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:layout_weight="0.66"
            android:onClick="accountLink"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:paddingLeft="5dp"
            android:background="#BBFFFF"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Quantity "
            android:background="#BBFFFF"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Operate"

            android:background="#BBFFFF"/>
    </LinearLayout>
    <!-- 添加一个ListView控件 -->
    <ListView
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:padding="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buy"
        android:layout_marginLeft="300sp"
        android:background="#7CFC00"
        android:text="BUY"/>
    <!--<TextView-->
        <!--android:id="@+id/shopResult"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="300sp"-->
        <!--android:background="#7A67EE"/>-->
</LinearLayout>
