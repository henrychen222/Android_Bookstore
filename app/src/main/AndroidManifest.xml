<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.weichen.bookstore2">
<!-- + + + It allows applications to open network sockets.-->
<uses-permission android:name="android.permission.INTERNET" />
<!-- + + + It allows applications to access information about networks.-->
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<!-- + + + It allows an application to install a shortcut in Launcher.-->
<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />


<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <!--An activity represents a single screen with a user interface. This element declares an activity
    that implements part of the applicationâ€™s visual user interface.
    One of the two activities points to the class: com.example.weichen.androidserverconnection.Login_Activityty
    The other activity points to the class: com.example.weichen.androidserverconnection.SigninAsyncTaskk-->
    <activity
        android:name=".activity.Login_Activity"
        android:label="@string/app_name">
        <!--Intents are asynchronous messages which allow the application to
                   request functionality from other services or activities. For example, an application
                   could ask via an intent for a contact application. This element specifies the types of
                   intents that an activity can respond to.-->
        <intent-filter>
            <!--For this class, an intent filter is registered which defines that this activity is
             started once the application starts.-->

            <action android:name="android.intent.action.MAIN" />

            <!--The category definition defines that this application is added to the application
            directory on the Android device.-->
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity android:name=".activity.ListAll_Activity">

    </activity>

    <activity android:name=".activity.Account_Activity">

    </activity>

    <activity android:name=".activity.BookInfo_Activity">

    </activity>

    <activity android:name=".activity.Adminstrator_Activity">

    </activity>

    <activity android:name=".activity.AddBooks_Activity">

    </activity>

    <activity android:name=".activity.ShowCustomers_Activity">

    </activity>

    <activity android:name=".activity.ListAll_Adm_Activity">

    </activity>

    <activity android:name=".activity.CustomerBookInfo_Activity">

    </activity>

    <activity android:name=".activity.Registor_Activity">

    </activity>
</application>

</manifest>